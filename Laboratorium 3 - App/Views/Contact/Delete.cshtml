@model Contact
@{
    ViewData["Title"] = "Home Page";
}

<h1>Czy na pewno chcesz usunąć kontakt?</h1>
<p>Imię:</p>
<h4>@Model.Name</h4>
<p>Email:</p>
<h4>@Model.Email</h4>
<form asp-action="Delete">
    <input asp-for="Id"/>
    <button class="btn btn-danger" type = "submit">Tak</button>
    <a class="btn btn-close" asp-action = "Index">Nie</a>

</form>