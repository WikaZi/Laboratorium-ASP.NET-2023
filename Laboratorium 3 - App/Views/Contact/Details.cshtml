@model Contact
@{
    ViewData["Title"] = "Home Page";
}
<h2>Szczegóły Kontaktu</h2>
<div class="mb-3">
    <label asp-for="Name">Imię</label>
    <input class="form-control" asp-for="Name" />
    <span class="text-danger" asp-validation-for="Name"></span>
</div>
<div class="mb-3">
    <label asp-for="Email">Adres mailowy</label>
    <input class="form-control" asp-for="Email" />
    <span class="text-danger" asp-validation-for="Email"></span>

</div>
<div class="mb-3">
    <label asp-for="Phone">Telefon</label>
    <input class="form-control" asp-for="Phone" />
    <span class="text-danger" asp-validation-for="Phone"></span>

</div>
<div class="mb-3">
    <label asp-for="Birth">Data urodzin</label>
    <input class="form-control" asp-for="Birth" />
    <span class="text-danger" asp-validation-for="Birth"></span>

</div>

<p>Utworzono: @Model.Created</p>


<div class="mb-3">
    <a class="btn btn btn-primary" asp-controller="Contact" asp-action="Index">Powrót</a>
</div>
