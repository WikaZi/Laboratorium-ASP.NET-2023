@page
@model LoginModel

@{
    ViewData["Title"] = "Zaloguj się";
}
<style>


    div {
        width: 600px;
    }

    section {
        
        width: 600px;
       margin-left:70px;
       margin-right: 70px;
    }

    body {
        font-family: sans-serif;
        background-color: #f8f8f8;
        
    }

    h1 {
        display: flex;
        margin-top: 20px;
        margin-left: 70px;
    }
   

    


    .container {
        position: relative;
        overflow: hidden;
        width: 750px;
        height: 500px;
        margin: 80px auto 0;
        background-color: white;
    }
    

    .btn.btn-primary {
        background-color: black;
       display:flex
       
       

        
    }
    a {
        text-decoration: none;
        color: lightgray;
    }

    a:active {
       color: black;
    }
    a:hover {
        color:black;
    }

    .form-check-input:checked {
        background-color: black;

    }


    



    .form-check-input {
        background-color: black;
        
    }

</style>

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                @*<h2>Use a local account to log in.</h2>*@
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Zaloguj się</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Zapomniałeś hasła?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Załóż konto</a>
                    </p>
                    
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
       
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
